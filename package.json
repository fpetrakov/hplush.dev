{
  "private": true,
  "scripts": {
    "clean": "rm -Rf dist/ .parcel-cache/",
    "spell": "yaspeller *.md dist/**/*.html",
    "lint": "eslint . && stylelint src/**/*.sss",
    "build": "NODE_ENV=production node --experimental-json-modules ./scripts/build.js",
    "start": "parcel serve src/index.pug --open",
    "test": "yarn lint && yarn build && size-limit && yarn spell"
  },
  "license": "MIT",
  "repository": "hplush/hplu.sh",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "del": "^6.0.0",
    "parcel": "^2.0.0-nightly.463",
    "postcss": "^8.2.14",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^5.0.5",
    "postcss-pxtorem": "^6.0.0",
    "pug": "^3.0.2",
    "ssdeploy": "^0.6.19",
    "sugarss": "^3.0.3"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.1",
    "@logux/stylelint-config": "^0.3.1",
    "@size-limit/file": "^4.10.2",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.4.1",
    "size-limit": "^4.10.2",
    "stylelint": "^13.13.1",
    "svgo": "^2.3.0",
    "yaspeller": "^7.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html"
        ],
        "rootValue": 16
      },
      "postcss-media-minmax": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.svg": "svgo",
    "*.sss": "stylelint --fix",
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "path": [
        "dist/index.html",
        "dist/*.woff2",
        "dist/logo.svg"
      ],
      "limit": "42 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "github",
      "hplush",
      "hplushlab",
      "hi@hplu.sh",
      "UI",
      "i18n",
      "a11y",
      "monetization"
    ]
  }
}
