{
  "private": true,
  "scripts": {
    "spell": "yaspeller *.md public/*.html",
    "start": "serve public/",
    "test": "size-limit && yarn spell"
  },
  "license": "MIT",
  "repository": "hplush/hplu.sh",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "ssdeploy": "^0.6.21"
  },
  "devDependencies": {
    "@size-limit/file": "^4.12.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "serve": "^12.0.0",
    "simple-git-hooks": "^2.4.1",
    "size-limit": "^4.12.0",
    "svgo": "^2.3.0",
    "yaspeller": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.svg": "svgo",
    "*.html": [
      "prettier --write",
      "yaspeller"
    ],
    "*.md": "yaspeller"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "path": [
        "public/index.html",
        "public/*.woff2",
        "public/logo.svg"
      ],
      "limit": "43 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "github",
      "hplush",
      "hplushlab",
      "hi@hplu.sh",
      "UI",
      "i18n",
      "a11y",
      "monetization"
    ]
  }
}
