{
  "private": true,
  "scripts": {
    "clean": "del-cli dist/ .cache",
    "spell": "yaspeller *.md dist/**/*.html",
    "lint": "eslint . && stylelint src/**/*.sss",
    "build": "NODE_ENV=production ./scripts/build.js",
    "start": "parcel serve src/index.pug --open",
    "test": "yarn lint && yarn build && size-limit && yarn spell"
  },
  "license": "MIT",
  "repository": "hplush/hplu.sh",
  "type": "module",
  "engines": {
    "node": ">=13.2.0"
  },
  "dependencies": {
    "autoprefixer": "^9.7.3",
    "del": "^5.1.0",
    "parcel-bundler": "^1.12.4",
    "postcss-combine-media-query": "^1.0.0",
    "postcss-hexrgba": "^2.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.2.1",
    "postcss-pxtorem": "^4.0.1",
    "pug": "^2.0.4",
    "ssdeploy": "^0.4.2",
    "sugarss": "^2.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^35.0.3",
    "@logux/stylelint-config": "^0.1.1",
    "@size-limit/file": "^2.2.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^15.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "stylelint": "^12.0.1",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^4.0.0",
    "svgo": "^1.3.2",
    "yaspeller": "^6.0.2"
  },
  "postcss": {
    "plugins": {
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html"
        ],
        "rootValue": 16
      },
      "postcss-media-minmax": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node"
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": [
      "svgo",
      "git add"
    ],
    "*.sss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": [
        "dist/index.html",
        "dist/*.woff2",
        "dist/logo.svg"
      ],
      "limit": "41 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "github",
      "hplush",
      "hplushlab",
      "ru",
      "sitnik"
    ]
  }
}
